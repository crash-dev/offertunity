<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
	    <shape>
	      <gradient
	          android:startColor="#3AB3D9"
	          android:endColor="#3AB3D9"
	          android:angle="270" />
	      <stroke
	          android:width="1dp"
	          android:color="#3AB3D9" />
	      <corners
	          android:radius="6dp" />
	      <padding
	          android:left="10dp"
	          android:top="10dp"
	          android:right="10dp"
	          android:bottom="10dp" />
	    </shape>
	</item>
  	<item>
  	    <shape>
	      <solid
	          android:color="#6DC9E3" />
	      <stroke
	          android:width="1dp"
	          android:color="#3AB3D9" />
	      <corners
	          android:radius="6dp" />
	      <padding
	          android:left="10dp"
	          android:top="10dp"
	          android:right="10dp"
	          android:bottom="10dp" />
	    </shape>
  	</item>
</selector>
